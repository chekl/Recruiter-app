<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reviewed_Date_for_Completed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &quot;Need review&quot;), !ISNULL(Reviewed_Date__c) )</errorConditionFormula>
    <errorDisplayField>Reviewed_Date__c</errorDisplayField>
    <errorMessage>Reviewed Date can be set only if status is &quot;Need review&quot;</errorMessage>
</ValidationRule>
