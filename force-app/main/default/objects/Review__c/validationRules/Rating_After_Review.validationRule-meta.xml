<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Rating_After_Review</fullName>
    <active>true</active>
    <errorConditionFormula
  >AND(ISPICKVAL(Status__c, &quot;Need review&quot;),  !ISNULL(Rating__c))</errorConditionFormula>
    <errorDisplayField>Rating__c</errorDisplayField>
    <errorMessage>Rating can be set only after review</errorMessage>
</ValidationRule>
